<h1>Edit Video</h1>

<form method="post" action="/videos/<%= video._id %>">
  <input type="hidden" name="_method" value="put">

  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= video.title %>">

  <label for="description">Description</label>
  <textarea id="description" name="description"><%= video.description %></textarea>

  <label for="youtubeId">Youtube link</label>
  <input type="text" id="youtubeId" name="youtubeId" value="<%= video.youtubeId %>">

  <input type="submit" value="Save" class="button-primary">
</form>
